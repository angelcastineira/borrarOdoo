<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- id que le me de la gana pero distinto -->
    <record model="ir.ui.view" id="openacademy.list1">
      <field name="name">openacademy list</field>
      <!-- en el model el nombre de la TABLA -->
      <field name="model">test_model</field>
      <field name="arch" type="xml">
        <tree>

          <!-- igual a los de model -->
          <field name="name"/>
          <field name="description"/>

        </tree>
      </field>
    </record>


        <record model="ir.ui.view" id="openacademy.list2">
