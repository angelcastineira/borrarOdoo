    <!-- Top menu item -->

    <!-- aqui es como se va mostrar la el modulo -->
    <!-- nombre que se muestra en el menu -->
    <menuitem name="openacademy_v2" id="openacademy.menu_root"/>

    <!-- menu categories -->
    <!-- menu en el que luego mostramos las listas -->
    <menuitem name="Menu 1" id="openacademy.menu_1" parent="openacademy.menu_root"/>

    <!-- creamos un boton -->
    <!-- cd yo pulso el bton con el action me va a mostrar directamente la tabla -->
    <menuitem name="Boton 1" id="openacademy.boton_1" parent="openacademy.menu_root"   action="openacademy.action_window_points" />


    <!-- actions -->
    <!-- listas que muestran el menu -->
    <!-- action para llamar a la tabla -->
    <menuitem name="List" id="openacademy.menu_1_list" parent="openacademy.menu_1"
